import BookAppointmentForm from "./BookAppointmentForm.astro";
---

<section class="text-[#333333] bg-white py-8 border-b-2 border-[#00ccde3b]">
    <div
        class="container mx-auto md:px-12 flex justify-between items-center gap-8"
    >
        <div class="text-justify">
            <aside class="float-left pr-6 pb-6 pt-2">
                <div
                    class="flex items-center justify-center w-32 h-32 drop-shadow-[0_0_7.5px_rgba(8,85,167,0.15)] bg-white"
                >
                    <img src="/assets/college-logo.png" alt="" />
