---
import Button from "./Button.astro";

export type Props = {
    title: string;
    href: string;
    image: string;
};

const { title, href, image }: Props = Astro.props;
---

<div
    class="drop-shadow-[0px_4px_7px_rgba(31,52,93,0.08)] basis-1/3 max-w-[350px] p-6 relative flex flex-col items-center bg-white rounded-md drop-shadow[0px_4px_7px_rgba(31,52,93,0.08)]"
>
    <!-- icon -->
    <div
        class="w-24 flex items-center justify-center h-24 rounded-full border-2 border-[#00cade] mb-3"
    >
        <img src={image} alt="" />
    </div>
    <h4 class="text-xl text-[#014d9f] font-medium mb-2 uppercase">{title}</h4>
    <p class="text-center text-sm mb-3">
        <slot />
    </p>
    <div class="absolute -bottom-3">
        <Button href={href}>Know more</Button>
    </div>
</div>
